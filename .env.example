# Media Manager Environment Configuration
# Copy this file to .env and configure with your actual values

# Logging Configuration
# Valid values: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# External Service API Keys
# Get TMDB API key from: https://www.themoviedb.org/settings/api
TMDB_API_KEY=

# Get TVDB API key from: https://www.thetvdb.com/dashboard/account/apikey
TVDB_API_KEY=

# OpenSubtitles API Configuration
OPENSUBTITLES_USERNAME=
OPENSUBTITLES_PASSWORD=

# Cache Configuration
# Location for downloaded posters
POSTER_CACHE_DIR=~/.media-manager/poster-cache

# Location for downloaded subtitles
SUBTITLE_CACHE_DIR=~/.media-manager/subtitle-cache

# Maximum cache size in MB (0 = unlimited)
CACHE_SIZE_MB=500

# Network Configuration
# API request timeout in seconds
API_REQUEST_TIMEOUT=30

# Number of retries for failed API requests
API_RETRY_COUNT=3

# Retry backoff multiplier (exponential)
API_RETRY_BACKOFF=2.0

# Processing Configuration
# Number of parallel worker threads
MAX_WORKER_THREADS=4

# Timeout for file operations in seconds
FILE_OPERATION_TIMEOUT=60

# Default Directories
# Primary location for scanning media
SCAN_PATH_1=

# Additional scan paths
SCAN_PATH_2=
SCAN_PATH_3=

# Target directories for organized media
TARGET_MOVIES_DIR=
TARGET_TV_SHOWS_DIR=
TARGET_DOWNLOADS_DIR=

# Feature Flags
# Enable/disable specific features
ENABLE_POSTER_DOWNLOAD=true
ENABLE_SUBTITLE_DOWNLOAD=true
ENABLE_NFO_EXPORT=true
ENABLE_AUTO_PROCESSING=false

# Poster Settings
# Types to download: poster,fanart,banner,thumbnail
POSTER_TYPES=poster,fanart,banner

# Preferred sizes: small,medium,large,original
POSTER_SIZES=medium,large

# Subtitle Settings
# Languages to download (ISO 639-1 codes)
SUBTITLE_LANGUAGES=en,es,fr

# Subtitle format: srt,ass,sub,vtt,ssa
SUBTITLE_FORMAT=srt

# NFO Settings
# Generate NFO files alongside media
NFO_EXPORT_ENABLED=true

# Subfolder for NFO files (empty = same directory)
NFO_TARGET_SUBFOLDER=

# Development Configuration
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Mock/Demo Mode
# Use mock data instead of real API
MOCK_API_ENABLED=false

# Database Configuration (Future)
# DATABASE_URL=sqlite:///~/.media-manager/library.db
# DATABASE_ECHO=false
